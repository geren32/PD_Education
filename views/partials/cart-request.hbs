{{#each cart.products}}
    <div class="prod_horiz" data-price="{{this.variation.price}}">
        <div class="d-flex align-items-start">
            <a class="prod_horiz-img" href="{{this.product.slag}}">
                <img class="img" src="{{this.product.image}}">
            </a>
            <div class="prod_horiz-desc">
                <div class="card-code">{{product.sku}}</div>
                <a class="title h5" href="{{this.product.slag}}">{{this.product.name}}</a>

                <div class="product_additions">{{this.product.short_description}}</div>

                <div class="prod_horiz-controls">
                    <div class="price_default h5">
                        <b>{{this.variation.price}}</b> грн
                    </div>

                    <div class="thumb-input-number">
                        <button type="button" class="add-product-to-checkout" product="{{this.order.product_id}}" variation="{{this.order.variation_id}}" data="-1" is_cart="true">-</button>
                        <input value="{{this.order.count}}" readonly="" tabindex="-1">
                        <button type="button" class="add-product-to-checkout" product="{{this.order.product_id}}" variation="{{this.order.variation_id}}" data="1" is_cart="true">+</button>
                    </div>
                </div>
                <button class="btn-close delete-order" order_id="{{this.order.id}}" is_cart="true"><svg width="16" height="16" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M2 4h12M5.333 3.999V2.665a1.333 1.333 0 011.333-1.333h2.667a1.333 1.333 0 011.333 1.333V4m2 0v9.333a1.333 1.333 0 01-1.333 1.333H4.666a1.333 1.333 0 01-1.333-1.333V3.999h9.333zM6.667 7.332v4M9.333 7.332v4" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" /></svg></button>
            </div>
        </div>
    </div>
{{/each}}

{{#each cart.kits}}
    <div class="prod_horiz" data-price="{{this.price}}">
        <div class="d-flex align-items-start">
            <a class="prod_horiz-img" href="{{this.kit.slag}}">
                <img class="img" src="{{this.kit.image}}">
            </a>
            <div class="prod_horiz-desc">
                <div class="card-code">{{this.kit.sku}}</div>
                <a class="title h5" href="{{this.kit.slag}}">{{this.kit.name}}</a>

                <div class="product_additions">{{this.kit.short_description}}</div>

                <div class="prod_horiz-controls">
                    <div class="price_default h5">
                        <b>{{this.price}}</b> грн
                    </div>

                    <div class="thumb-input-number">
                        <button type="button" class="add-product-kit-to-checkout" product_kit_id="{{this.kit.id}}" kit="{{this.productsJson}}" data="-1" is_cart="true">-</button>
                        <input value="{{this.order.count}}" readonly="" tabindex="-1">
                        <button type="button" class="add-product-kit-to-checkout" product_kit_id="{{this.kit.id}}" kit="{{this.productsJson}}" data="1" is_cart="true">+</button>
                    </div>
                </div>
                <button class="btn-close delete-order" order_kit_id="{{this.order.id}}" is_cart="true"><svg width="16" height="16" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M2 4h12M5.333 3.999V2.665a1.333 1.333 0 011.333-1.333h2.667a1.333 1.333 0 011.333 1.333V4m2 0v9.333a1.333 1.333 0 01-1.333 1.333H4.666a1.333 1.333 0 01-1.333-1.333V3.999h9.333zM6.667 7.332v4M9.333 7.332v4" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" /></svg></button>
            </div>
        </div>
        <table cellpadding="0" cellspacing="0">
            {{#each this.products}}
                <tr>
                    <td>{{this.product.name}}</td>
                    <td class="nowrap">{{this.info.quantity}} шт.</td>
<!--                    <td>Коричневий</td>-->
                </tr>
            {{/each}}
        </table>
    </div>
{{/each}}
<div class="cart-empty-message">
    <div class="title h5">Кошик порожній</div>
    <a class="btn btn-primary type-1" href="catalog">Перейти до каталогу</a>
</div>
