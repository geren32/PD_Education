            <div class="container">
                <div class="row">
                    <div class="col-xl-8 offset-xl-2">
                        {{#if post.banner.image includeZero=true}}
                        {{else}}
                            <h1 class="h2 single-post-title type-1 text-center">{{post.title}}</h1>
                        {{/if}}
<!--                        <h1 class="h2 single-post-title type-1 text-center">Стабільний розвиток Blum попри корона-кризу</h1>-->
                        <div class="simple-page">
                            {{#each post.body}}
                                {{#ifCond this.type '==' "1"}}
                                    {{{this.content}}}
                                    {{else}}
                                    {{#ifCond this.type '==' "2"}}
                                        <div class="simple-swiper">
                                            <div class="swiper-entry">
                                                <div class="swiper-button-prev d-none"><svg width="9" height="14" viewBox="0 0 9 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                    <path fill-rule="evenodd" clip-rule="evenodd" d="M3.06077 7.00006L8.53044 1.53039L7.46978 0.469727L1.46978 6.46973L0.939453 7.00006L1.46978 7.53039L7.46978 13.5304L8.53044 12.4697L3.06077 7.00006Z" />
                                                </svg></div>
                                                <div class="swiper-button-next d-none"><svg width="9" height="14" viewBox="0 0 9 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                    <path fill-rule="evenodd" clip-rule="evenodd" d="M1.52941 0.469727L7.52941 6.46973L8.05974 7.00006L7.52941 7.53039L1.52941 13.5304L0.46875 12.4697L5.93842 7.00006L0.46875 1.53039L1.52941 0.469727Z" />
                                                </svg></div>
                                                <div class="swiper-container" data-options='{"slidesPerView":1,"autoHeight":true}'>

                                                    <div class="swiper-wrapper">
                                            {{#each this.content}}
                                                <div class="swiper-slide"><img src="{{this}}" alt="" class="img"></div>
                                            {{/each}}
                                                    </div>
                                                    <div class="swiper-pagination"></div>
                                                </div>
                                            </div>
                                        </div>
                                    {{/ifCond}}
                                {{/ifCond}}
                            {{/each}}
                        </div>
                    </div>
                </div>
