                                </div>
                                <div class="simple-content__konto-klienta__saldo__status">
                                    <span class="status2"></span>
                                    W trakcie aktualizacji
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tabs">
                        <div class="tab-nav">
                            <div class="tab-toggle">
                                <div class="tab-nav__item active">
                                    Faktury
                                </div>
                                <div class="tab-nav__item">
                                    Korekty
                                </div>
                                <div class="tab-nav__item">
                                    Dane do faktury
                                </div>
                            </div>
                        </div>
                        <div class="tab-content">
                            <div class="tab-content__container tab active">
                                <form class="tab-content__header">
                                    <div class="tab-content__header__item">
                                        <input type="date" placeholder="">
                                    </div>
                                    <div class="tab-content__header__item">
                                        <select name="select1">
                                            <option value="Wszystkie">Wszystkie</option>
                                            <option value="Od najmniej">Zapłacone</option>
                                            <option value="Od najwięcej">Niezapłacone</option>
                                        </select>
                                    </div>
                                </form>
                               
                                <div class="table">
                                    <table>
                                        <thead>
                                        <tr>
                                            <td>
                                                <input name="checkbox1" type="checkbox" value="checked">
                                            </td>
                                            <td>NUMER FAKTURY</td>
                                            <td>DATA WYSTAWIENIA</td>
                                            <td>KWOTA</td>
                                            <td>STATUS/TERMIN ZAPŁATY</td>
                                        </tr>
                                        </thead>
                                        <tbody> 
                                            {{#each result}}
                                        <tr>
                                            <td></td>
                                            <td><span>{{this.number}}</span></td>
                                            <td><span>{{this.downloaded}}</span></td>
                                            <td>{{this.price}}.zł</td>
                                            <td><strong>{{this.status}}</strong></td>
                                        </tr>
                                       {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                               
                                <a href="" class="btn">Zapłać</a>
                            </div>
