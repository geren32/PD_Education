                                    </table>
                                </div>
                                <a href="" class="btn open-popup" data-rel="1">
                                    <i class="fas fa-download"></i>
                                    Zapłać</a>
                            </div>
                            <div class="tab-content__container tab">
                                <div class="row bg-brown">
                                    <div class="col-md-5">
                                        <div class="sub-title">{{salon.billing_title}} {{salon.billing_first_name}} {{salon.billing_last_name}}</div>
                                        <div class="text">
                                            <ul>
                                                <li>
                                                     {{salon.billing_address}}
                                                    <br>
                                                   {{salon.billing_zip}}   {{salon.billing_city}}
                                                </li>
                                                <li>
                                                    NIP:{{salon.billing_nip}}
                                                </li>
                                            </ul>

                                        </div>
                                    </div>
