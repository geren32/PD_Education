            </ul>{{#if ../first_name includeZero=true}}{{#if link_page includeZero=true}}<a href='{{this.link_page}}' class='btn-link'>Дізнатись більше</a>{{/if}}{{/if}}" data-image="{{this.map_image}}" data-image-active="{{this.map_image_active}}"></a>
            {{/each}}

