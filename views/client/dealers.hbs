

    <main>

        <div class="section pb-0">
            <div class="container">
                <div class="row">
                    <div class="col-xl-8 offset-xl-2">
                        <h1 class="h2 section-title">{{page.title}}</h1>
                        <div class="dealer-form">
                            <input id="deliveryStreet" class="input delivery-map-input" type="text" placeholder="Введіть область" name="street" required="" autocomplete="off">
                        </div>
                    </div>
                </div>
            </div>
            <div class="spacer-30"></div>

            <div class="map-block map-wrapper"
                 id="map"
